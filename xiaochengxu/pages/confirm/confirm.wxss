@import '../../wxss/weui.wxss';
@import '../../wxss/common.wxss';
/**app.wxss**/
page{
  background-color: rgb(244,244,244);
}
.navigator{
  background-attachment: #790079;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.bc_green{
  background-color: #504e43;
}
.bc_white{
   background-color: #ffffff;
}
.new_padd{
  padding: 15rpx 30rpx;
}
.color_white{
  color: #fff;
}
.bg_white{
  color:#ffffff;
}


 .cont_box {
  width: 90%;
  display: flex;
  flex-direction: column;
  background: white;
  border-radius: 20px;
  margin-top:15px;
  margin-left:5%;
} 

.weui-panel_box {
  margin-top: 10rpx;
}
/*桌台号、订单号  */
.weui_titleBox {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  font-size: 20px;
  font-weight:400;
  color: #000;
  border-bottom: 1px solid #e5e5e5;
}
/*去掉默认的bordr-bottom */
.weui_titleBox::after {
  border-bottom: none;
}
/*订单盒子  */
.weui_orderBox {
  height: 100rpx;
  /* line-height: 100rpx; */
  padding: 0 30rpx;
  vertical-align: sub;
  border-bottom: 1px solid #e5e5e5;
}

.weui_orderBox::before {
  border-top: none;
}
/*合计  */
.order_sum {
  height: 100rpx;
  padding: 0 30rpx;
  line-height: 100rpx;
  color: #000;
  font-size: 15px;
  border-bottom: 1px solid #e5e5e5;
}

.order_sum::after {
  border-bottom: none;
  height:500px;
}
/*总钱数  */
.order_sumMoney {
  color: black;
  font: bold 50px;
}
.weui-panel_hd{
  font-size: 10px !important;
}
/*价格，份数  */
.order_price {
  font-size: 28rpx;
}
/*缝隙  */
.fenxi {
  width: 100%;
  height: 10rpx;
  background: #d9d9d9;
}




/*输入备注  */
.beizhu_input {
  border-top: 1px #d9d9d9 solid;
  border-bottom: 1px #d9d9d9 solid;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 100rpx;
  line-height: 100rpx;
}

/*提交订单按钮 */
.footer_box {
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  bottom: 0rpx;
  z-index: 100;
  background-color: #fff;
}
/*总计金额、件数  */
.all_money {
  width: 90%;
  margin: 0 auto;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background-color: #790079;
  border-radius: 20rpx;
}



/*购物车列表  */

.cart_cells {
  width: 100%;
  height: 98rpx;
  position: relative;
  border-bottom: 1px #dedede solid;
}

.cells_name {
padding-left: 20rpx;
  width: 50%;
  position: absolute;
  left:0;
  top: 20rpx;
}

.price-box {
  width: 40%;
  font-size: 32rpx;
  position: absolute;
  left: 60%;
  top: 20rpx;
  color: #790079;
}

